generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ListingStatus {
  ACTIVE
  SOLD
  CANCELLED
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

model User {
  id              String   @id @default(uuid())
  auth0Id         String   @unique @map("auth0_id")
  email           String   @unique
  username        String?  @unique
  favoritePokemon String?  @map("favorite_pokemon")
  role            Role     @default(BUYER)
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  sellerRequests   SellerRequest[] @relation("UserRequests")
  reviewedRequests SellerRequest[] @relation("AdminReviews")
  cardListings     CardListing[]   @relation("UserListings")
  buyerOrders      Order[]         @relation("BuyerOrders")
  sellerOrders     Order[]         @relation("SellerOrders")
  cartItems        CartItem[]
  buyerOrderGroups OrderGroup[]    @relation("BuyerOrderGroups")
  sellerOrderItems OrderItem[]     @relation("SellerOrderItems")

  @@map("users")
}

model SellerRequest {
  id           String        @id @default(uuid())
  userId       String        @map("user_id")
  reason       String?
  status       RequestStatus @default(PENDING)
  reviewedById String?       @map("reviewed_by_id")
  reviewedAt   DateTime?     @map("reviewed_at")
  reviewNote   String?       @map("review_note")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  user       User  @relation("UserRequests", fields: [userId], references: [id], onDelete: Cascade)
  reviewedBy User? @relation("AdminReviews", fields: [reviewedById], references: [id])

  @@map("seller_requests")
}

model CardListing {
  id        String        @id @default(uuid())
  sellerId  String        @map("seller_id")
  cardName  String        @map("card_name")
  setName   String        @map("set_name")
  price     Decimal       @db.Decimal(10, 2)
  imageUrl  String?       @map("image_url")
  status    ListingStatus @default(ACTIVE)
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")

  seller     User        @relation("UserListings", fields: [sellerId], references: [id], onDelete: Cascade)
  orders     Order[]
  cartItems  CartItem[]
  orderItems OrderItem[]

  @@map("card_listings")
}

model Order {
  id                      String      @id @default(uuid())
  buyerId                 String      @map("buyer_id")
  sellerId                String      @map("seller_id")
  listingId               String      @map("listing_id")
  amount                  Decimal     @db.Decimal(10, 2)
  status                  OrderStatus @default(PENDING)
  stripeCheckoutSessionId String?     @unique @map("stripe_checkout_session_id")
  stripePaymentIntentId   String?     @unique @map("stripe_payment_intent_id")
  paidAt                  DateTime?   @map("paid_at")
  createdAt               DateTime    @default(now()) @map("created_at")
  updatedAt               DateTime    @updatedAt @map("updated_at")

  buyer   User        @relation("BuyerOrders", fields: [buyerId], references: [id])
  seller  User        @relation("SellerOrders", fields: [sellerId], references: [id])
  listing CardListing @relation(fields: [listingId], references: [id])

  @@index([buyerId])
  @@index([sellerId])
  @@map("orders")
}

model CartItem {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  listingId String   @map("listing_id")
  addedAt   DateTime @default(now()) @map("added_at")

  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing CardListing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([userId, listingId])
  @@map("cart_items")
}

model OrderGroup {
  id                      String      @id @default(uuid())
  buyerId                 String      @map("buyer_id")
  totalAmount             Decimal     @db.Decimal(10, 2)
  status                  OrderStatus @default(PENDING)
  stripeCheckoutSessionId String?     @unique @map("stripe_checkout_session_id")
  stripePaymentIntentId   String?     @unique @map("stripe_payment_intent_id")
  paidAt                  DateTime?   @map("paid_at")
  createdAt               DateTime    @default(now()) @map("created_at")
  updatedAt               DateTime    @updatedAt @map("updated_at")

  buyer      User        @relation("BuyerOrderGroups", fields: [buyerId], references: [id])
  orderItems OrderItem[]

  @@index([buyerId])
  @@map("order_groups")
}

model OrderItem {
  id           String   @id @default(uuid())
  orderGroupId String   @map("order_group_id")
  listingId    String   @map("listing_id")
  sellerId     String   @map("seller_id")
  amount       Decimal  @db.Decimal(10, 2)
  createdAt    DateTime @default(now()) @map("created_at")

  orderGroup OrderGroup  @relation(fields: [orderGroupId], references: [id], onDelete: Cascade)
  listing    CardListing @relation(fields: [listingId], references: [id])
  seller     User        @relation("SellerOrderItems", fields: [sellerId], references: [id])

  @@index([orderGroupId])
  @@index([sellerId])
  @@map("order_items")
}